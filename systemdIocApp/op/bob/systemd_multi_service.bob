  <!-- Service Row 1: Serval -->
  <widget type="label" version="2.0.0">
    <name>ServiceName1</name>
    <text>serval.service</text>
    <x>10</x>
    <y>90</y>
    <width>200</width>
    <height>30</height>
    <font>
      <font name="Default" family="Liberation Sans" style="REGULAR" size="12.0">
      </font>
    </font>
    <foreground_color>
      <color red="0" green="0" blue="0">
