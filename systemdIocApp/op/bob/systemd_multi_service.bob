      </color>
    </background_color>
    <transparent>false</transparent>
    <horizontal_alignment>0</horizontal_alignment>
    <vertical_alignment>1</vertical_alignment>
  </widget>
  <widget type="textupdate" version="2.0.0">
    <name>Status1</name>
    <pv_name>serval:service:Status</pv_name>
    <x>220</x>
    <y>90</y>
    <width>150</width>
    <height>30</height>
    <font>
      <font name="Default Bold" family="Liberation Sans" style="BOLD" size="12.0">
      </font>
    </font>
    <foreground_color>
      <color red="0" green="0" blue="0">
      </color>
    </foreground_color>
    <background_color>
      <color red="255" green="255" blue="255">
      </color>
    </background_color>
    <transparent>false</transparent>
    <format>1</format>
    <horizontal_alignment>1</horizontal_alignment>
    <vertical_alignment>1</vertical_alignment>
    <rules>
      <rule name="StatusColor" prop_id="foreground_color" out_exp="false">
        <exp bool_exp="pv0==&quot;running&quot;">
          <value>
            <color red="0" green="128" blue="0">
            </color>
          </value>
        </exp>
        <exp bool_exp="pv0==&quot;stopped&quot;">
          <value>
            <color red="255" green="0" blue="0">
            </color>
          </value>
        </exp>
        <exp bool_exp="pv0==&quot;starting&quot;">
          <value>
            <color red="255" green="165" blue="0">
            </color>
          </value>
        </exp>
        <exp bool_exp="pv0==&quot;stopping&quot;">
          <value>
            <color red="255" green="165" blue="0">
            </color>
          </value>
        </exp>
        <pv trig="true">serval:service:Status</pv>
      </rule>
    </rules>
  </widget>
  <widget type="action_button" version="3.0.0">
    <name>StartButton1</name>
    <actions>
      <action type="write_pv">
        <pv_name>serval:service:Start</pv_name>
        <value>1</value>
        <description>Start serval.service</description>
      </action>
    </actions>
    <text>Start</text>
    <x>380</x>
    <y>90</y>
    <width>100</width>
    <height>30</height>
    <foreground_color>
      <color red="255" green="255" blue="255">
      </color>
    </foreground_color>
    <background_color>
      <color red="0" green="128" blue="0">
