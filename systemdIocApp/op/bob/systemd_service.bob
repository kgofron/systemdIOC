  <widget type="textupdate" version="2.0.0">
    <name>Status1</name>
    <pv_name>$(P)$(R)Status</pv_name>
    <x>220</x>
    <y>90</y>
    <width>150</width>
    <height>30</height>
    <font>
      <font name="Default Bold" family="Liberation Sans" style="BOLD" size="12.0">
      </font>
    </font>
    <foreground_color>
      <color red="0" green="0" blue="0">
      </color>
    </foreground_color>
    <background_color>
      <color red="255" green="255" blue="255">
      </color>
    </background_color>
    <transparent>false</transparent>
    <format>1</format>
    <precision>0</precision>
    <horizontal_alignment>1</horizontal_alignment>
    <vertical_alignment>1</vertical_alignment>
    <border_alarm_sensitive>false</border_alarm_sensitive>
    <rules>
      <rule name="StatusColor" prop_id="foreground_color" out_exp="false">
        <exp bool_exp="pv0==&quot;running&quot;">
          <value>
            <color red="0" green="128" blue="0">
            </color>
          </value>
        </exp>
        <exp bool_exp="pv0==&quot;stopped&quot;">
          <value>
            <color red="255" green="0" blue="0">
            </color>
          </value>
        </exp>
        <exp bool_exp="pv0==&quot;starting&quot;">
          <value>
            <color red="255" green="165" blue="0">
            </color>
          </value>
        </exp>
        <exp bool_exp="pv0==&quot;stopping&quot;">
          <value>
            <color red="255" green="165" blue="0">
            </color>
          </value>
        </exp>
        <exp bool_exp="pv0==&quot;not-found&quot;">
          <value>
            <color red="128" green="128" blue="128">
            </color>
          </value>
        </exp>
        <pv trig="true">$(P)$(R)Status</pv>
      </rule>
    </rules>
  </widget>
