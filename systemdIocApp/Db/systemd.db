record(bo, "$(P)$(R)Start") {
    field(DTYP, "Systemd")
    field(SCAN, "Passive")
    field(ZNAM, "Stop")
    field(ONAM, "Start")
    field(DESC, "Start/Stop $(SERVICE) Service")
    field(OUT, "@$(SERVICE)")
    field(FLNK, "$(P)$(R)Status")
}

record(bo, "$(P)$(R)ResetFailed") {
    field(DTYP, "SystemdReset")
    field(SCAN, "Passive")
    field(ZNAM, "Reset")
    field(ONAM, "Reset")
    field(DESC, "Reset Failed $(SERVICE) Service")
    field(OUT, "@$(SERVICE)")
    field(FLNK, "$(P)$(R)Status")
}

record(stringin, "$(P)$(R)Status") {
    field(DTYP, "Systemd")
    field(SCAN, "1 second")
    field(DESC, "$(SERVICE) Service Status")
    field(INP, "@$(SERVICE)")
} 
